---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import type { ProjectSchema } from "src/content/config";
import ProjectLayout from "@layouts/ProjectLayout.astro";
import createSlug from "src/lib/createSlug";

export async function getStaticPaths() {
  const projectEntries = await getCollection("projects");
  return projectEntries.map((entry) => ({
    params: { slug: createSlug(entry.data.title, entry.slug) },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"projects">;
}

const { entry } = Astro.props;
const project: ProjectSchema = entry.data;
const { Content } = await entry.render();
---

<ProjectLayout
  title={project.title}
  description={project.description}
  pubDate={project.pubDate}
  updatedDate={project.updatedDate ? project.updatedDate : project.pubDate}
  heroImage={project.heroImage}
  badge={project.badge}
  tags={project.tags}
  repository={project.repository}
  status={project.status}
  technologies={project.technologies}
>
  <Content />
</ProjectLayout>
